{
  "name": "@avn/assets",
  "private": true,
  "packageManager": "yarn@3.3.0",
  "scripts": {
    "types:check": "tsc --pretty --noEmit",
    "build": "rm -rf lib && tsc",
    "build:watch": "tsc -w",
    "dev": "nodemon",
    "processor:start": "yarn db:migrate && node lib/processor.js",
    "processor:debug": "node --inspect --enable-source-maps -r dotenv/config lib/processor.js",
    "server:start": "squid-graphql-server",
    "db:reset": "node ../../packages/utils/scripts/reset-db.js",
    "db:migrate": "yarn squid-typeorm-migration-apply"
  },
  "dependencies": {
    "@avn/config": "^1.0.0",
    "@avn/metadata": "workspace:^",
    "@avn/types": "^1.0.0",
    "@avn/utils": "^1.0.0",
    "@polkadot/api": "^10.6.1",
    "@polkadot/util": "^12.6.1",
    "@subsquid/graphql-server": "^4.2.0",
    "@subsquid/logger": "^1.3.0",
    "@subsquid/ss58": "^0.1.4",
    "@subsquid/substrate-processor": "^2.4.1",
    "@subsquid/typeorm-store": "^0.2.2",
    "class-validator": "^0.14.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.22.4",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.2.0-rc.1",
    "typeorm": "^0.3.16"
  },
  "devDependencies": {
    "@subsquid/cli": "^2.4.3",
    "@subsquid/substrate-typegen": "^2.2.1",
    "@subsquid/typeorm-codegen": "^1.3.0",
    "@subsquid/typeorm-migration": "^1.2.0",
    "@types/node": "^18.11.9",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3"
  },
  "resolutions": {
    "chalk": "5.3.0",
    "strip-ansi": "7.1.0",
    "color-convert": "2.0.1",
    "color-name": "1.1.4",
    "is-core-module": "2.13.1",
    "error-ex": "1.3.2",
    "has-ansi": "5.0.1"
  }
}
